<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <!-- <link rel="stylesheet" href="style/debug.css"> -->
    <link rel="stylesheet" href="style/helpers.css">

    <title>Todolist</title>
    <style>
  .hero {
      background: black url(images/hero-bg.jpg) center / cover;
  }  
  
  .center, .center-column, .top, .right, .buttom, .left {
    display: flex;
    justify-content: center;
    align-items: center;
}

.center-column {
    flex-direction: column;
}

.top    {align-items:     flex-start;}
.top    {justify-content: flex-end;  }
.top    {align-items:     flex-end;  }
.top    {justify-content: flex-start;}

.single-spaced, .single-spaced * {
    line-height: 1;
}

@media (max-width: 1024px) {
    .desktop {
        display: none;
    }
}

ul {
      position: absolute;
      top: 71%;
      margin-left: 75%;
    }

ul li {

display: inline-block;
}

.buttom{
    justify-content: right;
}

/* table {
      position: relative;
      top: 50%;
      margin-left: 28%;
} */

h1 {
    font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
}

.message {
      position: relative;
      top: 50%;
      margin-left: 220px;
}

    </style>
</head>
<body>
    <section class="hero is-fullheight">
      <div class="hero-head">
          <div class="columns is-mobile is-marginless heading has-text-weight-bold ">
              <div class="column left">
                <div class="navbar-brand navbar-start is-active" style="padding-left: 10px;">
                 <a href="/" class="navbar-item has-text-white" style="font-size: large; 
                 font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;">EASYSOFT</a>
              </div>
              </div>
              <div class="navbar-brand navbar-center" style="margin-right: 300px;">
              <div id="navMenu" class="navbar-menu center-column">
              <div class="column center desktop">
                  <a href="/" class="navbar-item has-text-white is-capitalized" style="font-size: large;">Home</a>
                  <!-- <p class="navbar-item has-text-white" style="font-size: large;">HOME</p> -->
                  <a href="/employees" class="navbar-item is-capitalized has-text-white" style="font-size: large;">Crew</a>
                  <a href="/todolist" class="navbar-item is-capitalized " style="font-size: large;  color: #1a1147;">Todo</a>
                  <a href="#" class="navbar-item is-capitalized has-text-white" style="font-size: large;">Contact</a>
            </div>
        </div>
              </div>

        <div class="navbar-end is-primary">
            <div class="navbar-brand navbar-start">
            <div class="column right desktop">
                <a href="#" class="navbar-item is-capitalized desktop has-text-white" style="font-size: large;
                font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;">Sign Up</a>
                <a href="#" class="navbar-item is-capitalized has-text-white desktop" 
                style="font-size: large; font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;">
                    Sign In</a>
               </div> 
               <span class="navbar-burger burger has-text-white" data-target="navMenu" style="top: 12px;">
                <span></span>
                <span></span>
                <span></span>
              </span>
               </div>
                
<!--                 
                <div class="navbar-item has-text-white center">
                    <i class="fas fa-bars"></i>
                </div>
                  -->
            </div>
          </div>
          <script type="text/javascript">
            (()=>{
               var burger = document.querySelector('.burger');
               var nav = document.querySelector('#'+burger.dataset.target);
        
               burger.addEventListener('click', ()=>{
                   burger.classList.toggle('is-active');
                   nav.classList.toggle('is-active');
               });
            })();
            </script>
      </div>

      <header class="hero-body has-text-weight-bold">
        
        <div class="block">
          
          <div class="message is-info">
           <div class="message-header has-text-weight-bold">
             <p class="title is-5 has-text-white is-centered">Employee Todo List</p>
           </div>
           <div class="message-body">
            <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
              <thead>
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Position</th>
                  <th>To do</th>
                </tr>
                
              </thead>
              
              <tbody>
                <% for(item of result){%> 
                <tr>
                  <td><%= item.fName %></td>
                  <td><%= item.lName %></td>
                  <td><%= item.position  %> </td>
                  <td><%= item.todo %></td>
                </tr>
                <% }  %> 
              </tbody>
            </table>
           </div>
          
          </div>
        </div>

        
           
          
          
          
      
      </header>

    </section>
</body>
</html>